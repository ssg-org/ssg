<div class="breadcrumb-container" style="margin-left: 32px; margin-bottom: -10px;">
  <a href="<%= root_path() %>">ULICA.BA</a> / <span><%= t('documents.contact.bread_title') %></span>
</div>

<div class="contact-form">
	<span class="value_strip() din-font" style="font-size:26px; color:white;"><%= t('documents.contact.title') %></span><br/>
	<span class="din-font" style="color:white;"><%= t('documents.contact.sub_title') %></span>
	<br />
	<br />

	<div id="contact-details">
		<%= form_tag contact_message_path, :method => :post, :id=>"contact_form" do %>
			<%= text_field_tag :question, nil, :placeholder => t('documents.contact.question') %><br/>
			<%= text_area_tag :description, nil, :style => 'height:200px;', :placeholder => t('documents.contact.details') %>
			<%= text_field_tag :name, nil, :placeholder => t('documents.contact.name') %><br/>
			<%= text_field_tag :email, nil, :placeholder => t('documents.contact.email') %><br/>
			<br />
			<%= ssg_button t('documents.contact.send_button'), {:onclick => "submitForm('\#contact_form');"}%>
		<%end%>
	</div>
</div>

<script type="text/javascript">
		$('#contact_form')
		.submit(showLoader)
		.validate({
			ignore: null,
			rules : {
				question:  {
					required : true
				},
				description : {
					required : true
				},
				name : {
					required : true
				},
				email : {
					required : true,
					email: true
				}
			},
			messages: {
				question: {
					required: I18n.t('validation.contact.question')
				},
				description: {
					required: I18n.t('validation.contact.description')
				},
				name: {
					required: I18n.t('validation.contact.name')
				},
				email: {
					required: I18n.t('validation.contact.email'),
					email: I18n.t('validation.contact.email_f')
				}
			}
	});
</script>